datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int              @id @default(autoincrement())
  slack_user_id String           @unique
  name          String
}

model StatusRecord {
  id            Int      @id @default(autoincrement())
  user_id       String?
  selected_status String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

